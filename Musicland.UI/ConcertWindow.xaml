<Window x:Class="Musicland.UI.ConcertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musicland.UI"
        mc:Ignorable="d"
        Title="ConcertWindow" Height="300" Width="400" WindowStartupLocation="Manual" Top="150" Left="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button Name="buttonTicket" Content="Buy a ticket" Margin="25" Click="buttonTicket_Click"/>
        <ListBox Name="listBoxConcerts" Margin="10" Grid.Row="1" DisplayMemberPath="Info"/>
    </Grid>
</Window>
